{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  // Enable automerge for all PRs except major versions
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "bump",
        "lockFileMaintenance"
      ],
      "automerge": true
    }
  ]
}
